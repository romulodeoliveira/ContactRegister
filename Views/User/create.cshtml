@model UserModel
@{
    ViewData["Title"] = "Cadastro de Usuários";
}

<div class="text-center">

    <h1 class="display-4">Cadastro de Uusários</h1>

</div>

<form asp-controller="User" asp-action="Create" method="post">
    
    <div class="mb-3">
        <label for="email" class="form-label">E-mail:</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="E-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label for="UserName" class="form-label">Nome de usuário:</label>
        <input type="text" asp-for="UserName" class="form-control" id="UserName" placeholder="UserName">
        @Html.ValidationMessageFor(x => x.UserName)
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Senha:</label>
        <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="Password">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="d-grid gap-2 d-md-block">
        <button type="submit" class="btn btn-primary" type="button">Adicionar</button>
        <a asp-controller="User" asp-action="Index" role="button" class="btn btn-secondary">Voltar</a>
    </div>

</form>